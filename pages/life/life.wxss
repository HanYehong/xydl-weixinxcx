/* pages/mine/mine.wxss */

page{
  background: rgba(255, 206, 69, 0.2);
}

.container {
  margin-bottom: 20px;
  padding: 0 15px;
}

.login-info {
  margin: 10px 0;
}

.center {
  text-align: center;
  width: 125px;
  margin: 0 auto;
}

.has-login {
  position: relative;
  width: 100%;
  top: 10px;
  height: 111px;
}

.has-login .view-resume {
  position: absolute;
  color: #c8141f;
  font-size: 14px;
  right: 0;
}

.has-login .head-pic {
  margin: 4px 0 0 1px;
  width: 72px;
  height: 72px;
  border-radius: 36px;
}

.has-login .name {
  font-size: 14px;
  color: #333;
  height: 22px;
  line-height: 22px;
}

.nologin {
  height: 111px;
}

.nologin .loginbut {
  font-size: 14px;
  color: #fff;
  display: block;
  width: 100%;
  height: 45px;
  line-height: 45px;
  text-align: center;
  margin: 0 auto;
  background-color: #1fc8a1;
  position: relative;
  top: 33px;
}

.buttons {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  margin-bottom: 10px;
}

.button {
  margin-top: 10px;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-basis: 48%;
  height: 80px;
  line-height: 86px;
  background-color: #dd5145;
  text-align: center;
  color: #fff;
  font-size: 19px;
  font-family:Arial, Helvetica, sans-serif; 
}

.button-logo{
  margin: 0 10px 0 0;
  width: 30px;
  height: 30px;
}

.gongju{
  width:100%;
  height:25px;
  display: flex;
  background:#fff;
  margin-top: 20px;
}

.gongju text{
  font-size:12px;
  margin-left:5px;
  margin-top:3px;
  color:#ccc;
}

.gongju-display{
  width:100%;
  height:80px;
  display: flex; 
  margin-top:5px;
}

/* .gongju-display view{
  border: 1px solid #333;
} */

.gongju-display-item-1{
  width:50px;
  text-align:center;
  align-items: center;
}

.gongju-display-item-2{
  width:50px;
  text-align:center;
  margin-left:20px;
}

.gongju-logo{
  margin: 10px;
  width: 50px;
  height: 50px;
}

.gongju-text-block{
  width:70px;
  margin-top: -10px;
}

.gongju-text{
  font-size:13px;
  font-family: 'iconfont';
}

.logout {
  display: block;
  height: 40px;
  line-height: 40px;
  text-align: center;
  background-color: #c8141f;
  color: #fff;
  font-size: 16px;
  margin-bottom: 10px;
}

.login{
  display: block;
  height: 40px;
  line-height: 40px;
  text-align: center;
  background-color: #ccc;
  color: #fff;
  font-size: 16px;
  margin-bottom: 10px;
}
